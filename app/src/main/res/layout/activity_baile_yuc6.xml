<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondodefinitivo"
    android:orientation="vertical"
    tools:context=".baileYuc6">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary_variant"
        android:elevation="4dp"
        android:textAlignment="center"
        app:title="@string/estado2"
        app:titleTextColor="@color/white"
        tools:ignore="MissingConstraints"></androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#86FFFFFF"
        android:text="@string/BaileYuc6"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#86FFFFFF"
        app:srcCompat="@drawable/cintas" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        android:background="#66FFFFFF"
        android:padding="10dp"
        android:text="Este maravilloso baile tiene sus orígenes en Europa y se le conoce cono el Palo de Mayo, pero los Yucatecos hemos hecho este baile nuestro y lo celebramos en cada Vaqueria.  Con destreza vemos a los bailarines bailar y moverse al rededor del palo de con una sincronización magnifica que da como resultado una trenza de colores brillantes.  "
        android:textAlignment="viewStart"
        android:textColor="@color/black" />

</LinearLayout>