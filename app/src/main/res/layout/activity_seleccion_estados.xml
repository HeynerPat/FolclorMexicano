<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".seleccionEstados">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary_variant"
        android:elevation="4dp"
        app:title="Seleccione"
        app:titleTextColor="@color/black"
        tools:ignore="MissingConstraints"></androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/iSeleccion"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="2dp"
            android:layout_height="55dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ofrenda"
            tools:srcCompat="@drawable/ofrenda" />

        <TextView
            android:id="@+id/nEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="@string/estado1"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/bQR"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:text="@string/Entrar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagen2"
            android:layout_width="2dp"
            android:layout_height="32dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/ofrenda" />

        <TextView
            android:id="@+id/nEstado2"
