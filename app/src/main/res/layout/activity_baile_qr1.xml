<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondodefinitivo"
    android:orientation="vertical"
    tools:context=".baileQr1">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary_variant"
        android:elevation="4dp"
        android:textAlignment="center"
        app:title="@string/estado1"
        app:titleTextColor="@color/white"
        tools:ignore="MissingConstraints"></androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#86FFFFFF"
        android:text="@string/BaileQR1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#86FFFFFF"
        app:srcCompat="@drawable/pasacalle" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        android:background="#66FFFFFF"
        android:padding="10dp"
        android:text="Esta danza es lenta, de tres tiempos a la marcha popular del compàs vivo, el cual, era ejecutado por una clase social alta y durante mitad del siglo. El baile pasacalle se asemeja màs a algunas danzas europeas y la forma de bailarlo es en grupos de pares de hombres y mujeres, quienes se visten con ropa tìpica del baile folclorico de Quintana Roo. Se caracteriza por llevar una cadencia elegante en el cual predomina un valseado en combinacion con una variante en la que se realiza un paso cruzado flexionando remates alternados pero evitando perder la compostura."
        android:textAlignment="viewStart"
        android:textColor="@color/black" />

</LinearLayout>