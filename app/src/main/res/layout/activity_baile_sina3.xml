<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondodefinitivo"
    android:orientation="vertical"
    tools:context=".baileSina3">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary_variant"
        android:elevation="4dp"
        android:textAlignment="center"
        app:title="@string/estado6"
        app:titleTextColor="@color/white"
        tools:ignore="MissingConstraints"></androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#86FFFFFF"
        android:text="@string/BaileSina3"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#86FFFFFF"
        app:srcCompat="@drawable/elcoyote" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        android:background="#66FFFFFF"
        android:padding="10dp"
        android:text="La danza de los coyotes puede encontrarse entre los mayos en San Miguel, o entre los yaquis en Sonora.  La música que acompaña esta danza es la de un tambor de doble parche, con letras que hacen referencia a la vida del coyote. La principal celebración en la que se realiza este baile es Semana Santa.  Para esta danza, el bailarín se cubre la cabeza y la espalda con piel de coyote. Durante el baile representa a los movimientos de un coyote, al ritmo de la música."
        android:textAlignment="viewStart"
        android:textColor="@color/black" />

</LinearLayout>